# Environment Variables Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
CENTRAL_DB_NAME=webix-udirdlaga
DEFAULT_DATABASE=webix-localhost

# Optional: Custom subdomain to database mapping (JSON format)
# SUBDOMAIN_DB_MAPPING={"udirdlaga":"webix-udirdlaga","goytest":"webix_goytest"}

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8002

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-use-long-random-string
JWT_EXPIRES_IN=7d

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=300

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# File Upload Configuration
MAX_FILE_SIZE=100mb
UPLOAD_DIR=./uploads

# Performance Tuning
DB_CONNECTION_POOL_SIZE=50
DB_MIN_POOL_SIZE=5
DB_IDLE_TIMEOUT_MS=30000
